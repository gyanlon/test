<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newhope.nlbp.core.job.dao.NlbpSysBusinessJobInfoDao">

	    
	<update id="updateByIds" parameterType="java.util.Map">
		UPDATE nlbp_sys_business_job_info SET 	
			<if test="status != null">					
				status = #{status}
			</if>
		<where>
			<if test="ids != null">
        	id in 
			<foreach item="item" index="index" collection="ids" open="(" separator="," close=")">  
		 		 #{item} 
			</foreach> 
			</if>
		</where>
	</update>
	
	
	<update id="deleteInBatchesByIds" parameterType="java.util.Map">
		
		DELETE FROM nlbp_sys_business_job_info		
		<where>
			<if test="ids != null">
        	id in 
			<foreach item="item" index="index" collection="ids" open="(" separator="," close=")">  
		 		 #{item} 
			</foreach> 
			</if>
		</where>
	</update>
	
</mapper>